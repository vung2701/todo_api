{
    "watch": [
        "app.js",
        "routes/",
        "controllers/"
    ],
    "ext": "js,json",
    "ignore": [
        "node_modules/"
    ],
    "exec": "node app.js",
    "env": {
        "NODE_ENV": "development"
    },
    "events": {
        "restart": "kill-port 3200",
        "crash": "kill-port 3200"
    },
    "delay": "2500",
    "verbose": true
}